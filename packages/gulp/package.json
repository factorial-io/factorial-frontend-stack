{
  "private": true,
  "name": "factorial-frontend-stack",
  "version": "0.2.0",
  "engines": {
    "node": "~9.2.1",
    "npm": "~6.1.0"
  },
  "description": "A functional boilerplate of the Factorial frontend stack",
  "main": "index.js",
  "repository": "https://github.com/factorial-io/factorial-frontend-stack/tree/master/packages/gulp",
  "author": "Milan Matull <milan@factorial.io>",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all build:*",
    "build:css": "gulp build:css",
    "build:js": "gulp build:js",
    "build:test": "gulp build:test",
    "deploy": "gulp deploy",
    "start": "gulp server",
    "test": "npm-run-all -p test:*",
    "test:browser": "gulp test:browser",
    "lint": "npm-run-all -p lint:*",
    "lint:js": "eslint ./lib/**/*.js",
    "lint:css": "stylelint ./lib/**/*.css",
    "watch": "gulp",
    "fix": "npm-run-all -p fix:*",
    "fix:js": "eslint ./lib/**/*.js --fix",
    "fix:css": "stylelint ./lib/**/*.css --fix",
    "check:eslint": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "check:stylelint": "stylelint-config-prettier-check",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "ava": "^0.15.2",
    "babel-core": "^6.9.1",
    "babel-eslint": "^8.1.2",
    "babel-preset-airbnb": "^2.0.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.4.0",
    "expect.js": "^0.3.1",
    "gulp": "^3.9.1",
    "gulp-ava": "^0.12.0",
    "gulp-babel": "^6.1.2",
    "gulp-connect": "^4.0.0",
    "gulp-eslint": "^2.0.0",
    "gulp-exit": "0.0.2",
    "gulp-gh-pages": "^0.5.4",
    "gulp-mocha-phantomjs": "^0.11.0",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.1.1",
    "gulp-rename": "^1.2.2",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-stylefmt": "^1.1.0",
    "gulp-stylelint": "^3.8.0",
    "gulp-util": "^3.0.7",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.2",
    "lodash": "^4.13.1",
    "mocha": "^2.5.3",
    "npm-run-all": "^2.1.1",
    "postcss-calc": "^5.2.1",
    "postcss-color-function": "^2.0.1",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-import": "^8.1.2",
    "postcss-pseudoelements": "^3.0.0",
    "postcss-url": "^5.1.2",
    "prettier": "^1.9.2",
    "stylelint": "^9.0.0",
    "stylelint-config-prettier": "^3.2.0",
    "stylelint-config-suitcss": "^14.0.0",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "suitcss-components-test": "^1.0.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  }
}
